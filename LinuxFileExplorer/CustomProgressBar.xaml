<UserControl x:Class="LinuxFileExplorer.CustomProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Background of ProgressBar -->
        <Border CornerRadius="5" Background="#E0E0E0"/>

        <!-- Actual Progress -->
        <ProgressBar Name="Progress" Minimum="0" Maximum="100" Value="{Binding ProgressValue}" Foreground="#4CAF50" HorizontalAlignment="Stretch" Height="NaN" VerticalAlignment="Stretch" Width="NaN"/>

        <!-- TextBox inside ProgressBar -->
        <TextBlock Text="{Binding ProgressText}" Foreground="Black" FontWeight="Bold" Margin="0,0,0,0"/>
    </Grid>
</UserControl>